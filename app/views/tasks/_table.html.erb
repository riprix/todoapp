<table class="table  table-hover">  
  <thead>
    <tr>
      <th>Name</th>
      <th>Deadline</th>
      <th>Duration</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% tasks.each do |task| %>

    <tr>      
      <td class="<%= css_class %>"><%= link_to task.name, edit_task_path(task) %></td>
      <td><%= task.deadline %></td>
      <td><%= task.duration %></td>
      <td><%= link_to 'Destroy', task, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</tbody>
</table>

